# Furtim Production Environment Configuration
# Stealth Address Payment System

# =============================================
# SUPABASE DATABASE CONFIGURATION
# =============================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres

# =============================================
# APTOS BLOCKCHAIN CONFIGURATION
# =============================================
APTOS_NETWORK=testnet
APTOS_RPC_URL=https://fullnode.testnet.aptoslabs.com/v1
APTOS_CONTRACT_ADDRESS=0x2e04b9fdd49ae932c8b08f04540363233093fec62579139722eb4b6a9f33464c
APTOS_FAUCET_URL=https://faucet.testnet.aptoslabs.com

# For mainnet deployment, update these values:
# APTOS_NETWORK=mainnet
# APTOS_RPC_URL=https://fullnode.mainnet.aptoslabs.com/v1
# APTOS_CONTRACT_ADDRESS=your_mainnet_contract_address

# =============================================
# SECURITY CONFIGURATION
# =============================================
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_for_meta_keys_32_characters
SESSION_SECRET=your_session_secret_here
API_KEY_SECRET=your_api_key_secret_here

# =============================================
# API CONFIGURATION
# =============================================
API_PORT=8000
API_HOST=0.0.0.0
CORS_ORIGIN=https://your-frontend-domain.com
CORS_CREDENTIALS=true

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================
# MONITORING AND LOGGING
# =============================================
LOG_LEVEL=info
ENABLE_MONITORING=true
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# =============================================
# EMAIL CONFIGURATION (Optional)
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@furtim.com
FROM_NAME=Furtim

# =============================================
# FILE STORAGE (Optional)
# =============================================
STORAGE_PROVIDER=supabase
STORAGE_BUCKET=furtim-storage
STORAGE_URL=https://your-project-id.supabase.co/storage/v1

# =============================================
# CACHE CONFIGURATION
# =============================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
CACHE_PREFIX=furtim:

# =============================================
# BACKUP CONFIGURATION
# =============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_URL=s3://your-backup-bucket

# =============================================
# FEATURE FLAGS
# =============================================
ENABLE_STEALTH_ADDRESSES=true
ENABLE_PAYMENT_LINKS=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_TWO_FACTOR=false
ENABLE_API_KEYS=true

# =============================================
# DEVELOPMENT/DEBUG (Set to false in production)
# =============================================
DEBUG=false
ENABLE_DEBUG_ROUTES=false
ENABLE_TEST_DATA=false
